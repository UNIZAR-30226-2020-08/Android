<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deslizar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.2"
    android:scrollbars="none"
    tools:context=".Perfil"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tapete2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameUserPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="35dp"
                android:textColor="#ffffff"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="200dp"
                    android:src="@drawable/fotoperfil"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#00000000"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:text="PARTIDAS"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            />

                        <TextView
                            android:id="@+id/partidasNumero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COPAS"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/puntosPerfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="#00000000"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">
            <Button
                android:textColor="#349702"
                android:id="@+id/editperfil"
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="15dp"
                android:backgroundTint="#ffffff"
                android:layout_height="wrap_content"
                android:text="Editar Perfil"/>
        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#30FFFFFF"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="PERSONALIZACIÓN"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:background="#19580A"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Cartascambio"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#ffffff">

                    <!-- Title, secondary and supporting text -->
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/cartas_icono"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cartas"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:textColor="#349702"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Tapetecambio"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#ffffff">

                    <!-- Title, secondary and supporting text -->
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mesa_icono"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tapetes"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:textColor="#349702"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#ffffff">

                    <!-- Title, secondary and supporting text -->
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mesa_icono" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información del Juego"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:textColor="#349702"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <Button
                android:textColor="#349702"
                android:id="@+id/apagarSesion"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="15dp"
                android:backgroundTint="#ffffff"
                android:layout_height="wrap_content"
                android:text="Cerrar sesión" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ffffff">
            </LinearLayout>
            <Button
                android:textColor="#ffffff"
                android:id="@+id/eliminarSesion"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="15dp"
                android:backgroundTint="#FF0C08"
                android:layout_height="wrap_content"
                android:text="Borrar cuenta"/>

        </LinearLayout>
    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:id="@+id/animation_carga_perf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_fileName="loading2.json"
        app:lottie_loop="true"/>
</RelativeLayout>
</ScrollView>
