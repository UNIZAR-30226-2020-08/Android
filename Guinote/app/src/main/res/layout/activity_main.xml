<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/general_layout1"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:elevation="0dp"
        android:backgroundTint="#00000000">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:backgroundTint="#00000000"
            style="@style/Widget.MaterialComponents.Toolbar.Surface"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/menu_opciones"
            app:titleTextAppearance="?attr/textAppearanceHeadline6" />
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:id="@+id/deslizar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:scrollbars="none">


        <LinearLayout
            android:id="@+id/relative_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_start_2vs2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:backgroundTint="#99FFF9A4"
                    android:fontFamily="@font/bungee_shade"
                    android:text="2\nvs\n2"
                    android:textColor="#FA61EB"
                    android:layout_marginRight="5dp"
                    android:textSize="45sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/button_start_1vs1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#99FFF9A4"
                    android:fontFamily="@font/bungee_shade"
                    android:text="1\nvs\n1"
                    android:textColor="#FA61EB"
                    android:textSize="45sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <Button
                    android:id="@+id/button_start_offline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#99FFF9A4"
                    android:fontFamily="@font/bungee_shade"
                    android:text="Partida\noffline"
                    android:paddingTop="40dp"
                    android:paddingBottom="40dp"
                    android:textColor="#FA61EB"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_start_private_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#99FFF9A4"
                    android:paddingTop="40dp"
                    android:paddingBottom="40dp"
                    android:fontFamily="@font/bungee_shade"
                    android:text="Crear\ntorneo\nprivado"
                    android:textColor="#FA61EB"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_join_private_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#99FFF9A4"
                    android:fontFamily="@font/bungee_shade"
                    android:text="Unirse\na\ntorneo"
                    android:paddingTop="40dp"
                    android:paddingBottom="40dp"
                    android:textColor="#FA61EB"
                    android:textSize="30sp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>